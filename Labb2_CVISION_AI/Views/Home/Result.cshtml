@model Labb2_CVISION_AI.Models.ImageAnalysisResult

@{
    ViewBag.Title = "Image Analysis Result";
}

<h2>@ViewBag.Title</h2>

<div style="display: flex; justify-content: space-between; align-items: flex-start;">
    <div style="flex: 1; margin-right: 20px;">
        <h3>Description:</h3>
        <p>@Model.Description</p>

        <h3>Tags:</h3>
        <ul>
            @foreach (var tag in Model.Tags)
            {
                <li>@tag</li>
            }
        </ul>

        <h3>Categories:</h3>
        <ul>
            @foreach (var category in Model.Categories)
            {
                <li>@category</li>
            }
        </ul>

        <h3>Objects:</h3>
        <ul>
            @foreach (var obj in Model.Objects)
            {
                <li>@obj</li>
            }
        </ul>
    </div>

    @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
    {
       
        <div style="flex-shrink: 0; max-width: 30%; text-align: center;">
            <h6>Yout thumbnail has been saved to WWWROOT/thumbnails, inside your project.</h6>
            <img src="@Model.ThumbnailUrl" alt="Thumbnail" style="max-width: 100%; height: auto; border: 1px solid #ddd; border-radius: 4px;" />
        </div>
    }
</div>